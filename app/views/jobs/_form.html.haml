= simple_form_for(@job, html:{class: "form-horizontal "}) do |f|
	= f.collection_select :category_id, Category.all, :id, :name,{promt: "Choose a category"}, input_html: { class: 'form-control' } 
	= f.input :title, label: "Job title", input_html: { class: 'special' }
	= f.input :description, label: "Job description", input_html: { class: 'special' }
	= f.input :company, label: "Your company", input_html: { class: 'special' }
	= f.input :url, label: "Link to job", input_html: { class: 'special' }
	%br/
	= f.button :submit